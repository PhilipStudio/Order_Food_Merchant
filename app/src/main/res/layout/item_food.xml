<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="120dp">
    <ImageView
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:background="@color/white"
        android:id="@+id/item_image_food"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/item_name_food"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Má»³ Spaghetti sot BBQ"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_image_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_baseline_favorite"
        android:layout_below="@id/item_name_food"
        android:id="@+id/item_like_food"
        android:textSize="18sp"
        android:textColor="#807E7E"
        android:text="50"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_image_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/item_price_food"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="30.000 dong"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_image_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:padding="10dp"
        android:src="@drawable/ic_baseline_delete"
        android:id="@+id/item_image_view_delete"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />
</RelativeLayout>